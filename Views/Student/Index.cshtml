@model ClassConnect.Models.LoginorSignUp
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/LoginSignUpLayout.cshtml";
}

<div class="container m-5">
    <div class="row">
        <div class="col-4 offset-4 border border-primary rounded p-5">
            <h1 class="text-center text-primary">Student Login</h1>
            <h6 class="text-success text-center">@TempData["success"]</h6>
            <div class="text-center">
                <span>or <a class="text-primary font-weight-bold" asp-action="SignUp" asp-controller="Student">create an account</a></span>
            </div>

            <form method="post" asp-action="Index">
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input type="text" class="form-control" autocomplete="off" required asp-for="Username" />
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="password" class="form-control" autocomplete="off" asp-for="Password" required />
                </div>
                <div class="form-group">
                    <input type="checkbox" asp-for="Remember" />
                    <label asp-for="Remember">Remember Me</label>
                </div>
                <div class="form-group">
                    <span class="float-left mb-3">Are you an instructor? <a asp-action="Index" asp-controller="Instructor">Log In here</a></span>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-block btn-primary mb-2 float-right" autocomplete="off" value="Log In" />
                </div>
            </form>
            <h6 class="text-danger text-center">@TempData["error"]</h6>

        </div>
    </div>
</div>

